@model IEnumerable<MVCMedicalController.Models.Speciality>

@{
    ViewData["Title"] = "Специальность врача";
}

<h1>Специальность врача</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Specialities" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpecialityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpecialityID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpecialityID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpecialityID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
